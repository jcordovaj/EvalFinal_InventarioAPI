<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="6dp"
    android:layout_margin="8dp"
    android:padding="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nombre"
            android:textStyle="bold"
            android:textSize="16sp"/>

        <ImageView
            android:id="@+id/ivSynced"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentEnd="true"
            android:contentDescription="Pendiente"
            android:src="@android:drawable/stat_notify_error"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvName"
            android:text="DescripciÃ³n"
            android:maxLines="2"/>

        <TextView
            android:id="@+id/tvPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tvDescription"
            android:text="Precio"/>

        <TextView
            android:id="@+id/tvQuantity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/tvPrice"
            android:layout_alignBaseline="@id/tvPrice"
            android:layout_marginStart="12dp"
            android:text="Cantidad"/>

        <ImageButton
            android:id="@+id/btnEdit"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentEnd="true"
            android:layout_below="@id/ivSynced"
            android:src="@android:drawable/ic_menu_edit"
            android:contentDescription="Editar"
            android:background="?attr/selectableItemBackgroundBorderless"/>

        <ImageButton
            android:id="@+id/btnDelete"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_toStartOf="@id/btnEdit"
            android:layout_alignBaseline="@id/btnEdit"
            android:src="@android:drawable/ic_menu_delete"
            android:contentDescription="Eliminar"
            android:background="?attr/selectableItemBackgroundBorderless"/>
    </RelativeLayout>
</androidx.cardview.widget.CardView>